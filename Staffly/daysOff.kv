# daysOff.kv
#:kivy 1.11.1
#:import BoxLayout kivy.uix.boxlayout
#:import ObjectProperty kivy.properties
#:import MDDatePicker kivymd.uix.picker
#:import Factory kivy.factory
#:import theme_font_styles kivymd.font_definitions
#:import GridLayout  kivy.uix.gridlayout
#:import utils kivy.utils
#:import Spinner kivy.uix.spinner
#include daysOff.py

<daysOff@Screen>:
    name: "daysOff"
    MDBoxLayout:
        orientation: "vertical"
        padding: 0 ,200 ,0 ,0
        MDLabel:
            halign: "center"
            size_hint_y: None
            font_style: "H4"
            text: "Days Off"
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1


        MDBoxLayout:
            orientation: 'horizontal'
            MDBoxLayout:
                orientation: 'vertical'
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'top'
                    MDRaisedButton:
                        id: button
                        text: "PRESS ME"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release: root.typeMenu()

                MDBoxLayout:
                    orientation: 'horizontal'
                    AnchorLayout:
                        anchor_x: 'left'
                        anchor_y: 'center'
                        padding: 30,0,0,0
                        MDFillRoundFlatButton:
                            text: "Start Date"
                            on_release: root.setStartDate()
                            opposite_colors: True
                            valign: "center"
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'center'
                        MDLabel:
                            id: start_date_label
                            theme_text_color: "Primary"

                MDBoxLayout:
                    orientation: 'horizontal'
                    halign: 'center'
                    AnchorLayout:
                        anchor_x: 'left'
                        anchor_y: 'center'
                        padding: 30,0,0,0
                        MDFillRoundFlatButton:
                            text: "End Date"
                            opposite_colors: True
                            on_release: root.setEndDate()
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'center'
                        MDLabel:
                            id: end_date_label
                            theme_text_color: "Primary"
                MDBoxLayout:
                    orientation: 'vertical'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        padding: 30,50,30,0
                        MDTextField:
                            id: comment
                            size: self.size
                            hint_text: 'Comment'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        padding: 0,150,0,0
                        MDFillRoundFlatButton:
                            text: "Submit"
                            on_release: root.getComment()
                            opposite_colors: True


            MDBoxLayout:
                orientation: 'vertical'
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'top'
                    MDLabel:
                        font_style: "H5"
                        text: "Balance"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 1, 1
                        halign: 'center'

                MDBoxLayout:
                    orientation: 'horizontal'
                    canvas.before:
                    AnchorLayout:
                        anchor_x: 'left'
                        anchor_y: 'center'
                        padding: 30,0,0,0
                        MDLabel:
                            font_style: "H6"
                            text: "As Off:"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'center'
                        MDLabel:
                            font_style: "H6"
                            text: "Balance"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                MDBoxLayout:
                    orientation: 'horizontal'
                    AnchorLayout:
                        anchor_x: 'left'
                        anchor_y: 'center'
                        padding: 30,0,0,0
                        MDLabel:
                            font_style: "H6"
                            text: "Days Used:"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'center'
                        MDLabel:
                            font_style: "H6"
                            text: "Balance"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                MDBoxLayout:
                    orientation: 'horizontal'
                    AnchorLayout:
                        anchor_x: 'left'
                        anchor_y: 'center'
                        padding: 30,0,0,0
                        MDLabel:
                            font_style: "H6"
                            text: "Days Left"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'center'
                        MDLabel:
                            font_style: "H6"
                            text: "Balance"
                            theme_text_color: "Custom"
                            text_color: 0, 0, 1, 1
        MDBoxLayout:
            orientation: 'horizontal'



